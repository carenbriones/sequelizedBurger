<h1>Eat-Da-Burger</h1>

<div id="add-burger">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger-name">Burger Name:</label>
      <input type="text" id="burger-name" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>

<div id="not-devoured-burgers">
  <h2>Burgers that have not been eaten</h2>
  <div class="burgers">
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>

<div id="devoured-burgers">
  <h2>Burgers that have been devoured</h2>
  <div class="burgers">
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>